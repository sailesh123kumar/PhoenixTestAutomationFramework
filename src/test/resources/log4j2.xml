<Configuration>

	<appenders>
		<Console name="Console" target="SYSTEM_OUT">

			<patternLayout
				pattern="%d : [%t] : %highlight{%5p} : %c::%M():%L - %m%n">
			</patternLayout>

		</Console>
	</appenders>

	<loggers>

		<root level="info">
			<AppenderRef ref="Console"></AppenderRef>
		</root>

	</loggers>

</Configuration>