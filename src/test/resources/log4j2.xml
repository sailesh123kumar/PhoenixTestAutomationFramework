<Configuration>

	<appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<patternLayout
				pattern="%d : [%t] : %highlight{%5p} : %c::%M():%L - %m%n">
			</patternLayout>
		</Console>

		<File name="FileAppender" fileName="logs/applicaion.logs">
			<patternLayout
				pattern="%d : [%t] : %highlight{%5p} : %c::%M():%L - %m%n">
			</patternLayout>
		</File>


	</appenders>


	<loggers>

		<root level="info">
			<AppenderRef ref="Console"></AppenderRef>
			<AppenderRef ref="FileAppender"></AppenderRef>
		</root>

	</loggers>

</Configuration>